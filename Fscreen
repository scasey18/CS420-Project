import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class Fscreen {
	
	public static void main(String[] args) {
		JFrame frame = new JFrame("Farm Project");
		frame.setVisible(true);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(500, 500);
		frame.setLocation(300, 130);
		
		JPanel panel = new JPanel();
		
		frame.add(panel);
		
		JLabel lbl = new JLabel("Add item");
		lbl.setVisible(true);
		
		JLabel lble = new JLabel("Price Total");
		lble.setVisible(true);
		
		panel.add(lbl);
		panel.add(lble);
		
		String[] buttons = {"BARN", "TOOL", "ANIMAL", "SHED"};
		
		final JComboBox<String> cb = new JComboBox<String>(buttons);
		
		cb.setVisible(true);
		panel.add(cb);
		
		JButton bttn = new JButton("ADD");
		panel.add(bttn);
		JButton btn = new JButton("UPDATE");
		panel.add(btn);
		
	}

}
